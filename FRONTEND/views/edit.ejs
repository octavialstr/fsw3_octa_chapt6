    </div>
  </section>

<!-- FORM INPUT DATA CAR -->

<div class="squareaddnew">
    <form action="/edit/<%=data.id %>" class="input" method="post" enctype="multipart/form-data">
        <div class="row">
            <label for="" class="label">Nama*</label>
            <input type="text" placeholder="masukan nama" class="form" name="nama" value="<%=data.nama %>">
        </div><br>
        <div class="row">
            <label for="" class="label">Sewa Per Hari*</label>
            <input type="text" placeholder="masukan sewa/hari" class="form" name="harga" value="<%=data.harga %>">
        </div><br>
        <div class="row">
            <label for="" class="label">Ukuran*</label>
            <input type="text" placeholder="masukan ukuran" class="form" name="ukuran" value="<%=data.ukuran %>">
        </div><br>
        <div class="row">
            <label for="" class="label">Foto*</label>
            <input type="file" placeholder="upload foto" class="form" name="gambar" value="<%=data.gambar %>">
        </div>
        <button class="btncancel">Cancel</button>
        <button type="submit" class="btnsave">Save</button>
    </form>
</div>
